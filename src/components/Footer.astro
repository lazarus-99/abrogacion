---
import { SITE_TITLE } from "@consts";
const today = new Date();
---

<footer class="mx-auto mt-auto w-full max-w-[85rem] py-10">
  <nav class="mx-auto w-full max-w-[85rem] px-4" aria-label="Footer">
    <div class="mt-2 sm:order-1 sm:mb-0">
      <a
        class="flex-none text-sm text-neutral-500 hover:text-neutral-800 dark:text-neutral-500 dark:hover:text-neutral-200"
        href="/"
        aria-label="Brand">{SITE_TITLE} &copy; {today.getFullYear()}</a
      >
    </div>
  </nav>
</footer>
