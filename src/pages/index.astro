---
import IndexLayout from "@layouts/IndexLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "@consts";
---

<IndexLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <div class="mt-36 flex justify-center">
    <div
      class="flex h-64 w-96 flex-col justify-center rounded-md border-2 border-neutral-300 bg-[url(fire.jpg)] bg-cover px-16 text-white"
    >
      <h2 class="text-3xl">Bolivia</h2>
      <div class="text-2xl">4 millones de hectáreas consumidas</div>
      <a href="/abrogacion" class="pt-4">Abrogación</a>
    </div>
  </div>
</IndexLayout>
