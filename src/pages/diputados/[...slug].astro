---
import { getCollection } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";
import OptimizedCover from "@components/OptimizedPicture.astro";

export async function getStaticPaths() {
  const deputies = await getCollection("diputados");
  return deputies.map((deputy) => ({
    params: { slug: deputy.slug },
    props: deputy,
  }));
}

const deputy = Astro.props;
const spanColor = deputy.data.isSupportive
  ? "bg-lime-500"
  : "bg-red-600 text-white";
---

<BaseLayout title={deputy.data.title}>
  <main>
    <article class="prose mx-auto dark:prose-invert">
      <div class="prose-h1 text-center">
        <h1>{deputy.data.title}</h1>
      </div>
      <div>
        {
          deputy.data.cover && (
            <OptimizedCover src={deputy.data.cover} alt={deputy.data.title} />
          )
        }
      </div>
      <div>
        <strong>Partido Pol√≠tico:</strong>
        {deputy.data.party}
      </div>
      <div class="flex justify-center">
        <span
          class={`mb-2 mr-2 inline-block rounded-full px-6 py-4 text-xl uppercase ${spanColor}`}
        >
          {deputy.data.isSupportive ? "A favor" : "En contra"}
        </span>
      </div>
    </article>
  </main>
</BaseLayout>
